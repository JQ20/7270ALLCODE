<div class="bd-lead bd-side" style="padding: 3rem;margin-left: -3rem;">
  <header class="bd-header">
    <div class="bd-header-titles">
      <h1 class="title">
        Q-Pon
      </h1>
      <p class="subtitle is-4" style="color: #7a7a7a;">Redeem your coins for dining coupons</p>

    </div>

  </header>
</div>

<div class="container">

  <div class="columns">
    <div class="column" style="margin-right: 0rem;">
      <i class="title is-5">
        HKIsland
      </i>
      <%let i = 0; Qpon.forEach( function(Qpon) { %>
      <%if(Qpon.Region=="HK Island" && i<2 ){ %>
      <div class="card" style="margin-bottom: 1.5rem; ">
        <div class="card-image">
          <figure class="image is-2by1">
            <a href="../../../qpon/detail/<%=Qpon.id%>"><img src="../../../<%=Qpon.Image %>" > </a>
          </figure>
        </div>
        <div class="card-content">
          <div class="media">
            <div class="">
              <p class="title is-5">
                <a href="../../../qpon/detail/<%=Qpon.id%>"><%= Qpon.Restaurant %></a>
              </p>
              <p class="subtitle is-6">
                <%= Qpon.Title %>
              </p>
            </div>
          </div>

          <div class='content'>
            <div class="media-content">
              <p class='is-success'>
                coins: <%= Qpon.Coins %>
              </p>
            </div>
          </div>
        </div>
      </div>
      <% i++;} %>
      <% }); %>
    </div>


